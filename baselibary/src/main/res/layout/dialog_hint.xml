<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp"
    android:layout_gravity="center"
    app:contentPadding="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="提示"
            android:textColor="@color/v3_black"
            android:textSize="15sp" />

        <TextView
            android:lineSpacingExtra="1.5dp"
            android:id="@+id/dialog_hint_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text=""
            android:textColor="@color/v3_black"
            android:textSize="15sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:visibility="gone"
                android:id="@+id/dialog_hint_clear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/item_select_bg_mat"
                android:gravity="center"
                android:padding="10dp"
                android:text="取消"
                android:textColor="@color/v3_hui"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/dialog_hint_ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_red"
                android:gravity="center"
                android:padding="10dp"
                android:text="确定"
                android:textColor="@color/v3_white"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>