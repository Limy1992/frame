<?xml version="1.0" encoding="utf-8"?>
<lmy.com.conlib.ButtonView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="click"
        android:text="跳转H5" />



    <FrameLayout
        android:id="@+id/fr"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_lv2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/img_zhifubao"
            />

        <ImageView
            android:id="@+id/image_lv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/img_welfare"
            />

    </FrameLayout>





    <TextView

        android:id="@+id/shop_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="shopCar" />

</lmy.com.conlib.ButtonView>